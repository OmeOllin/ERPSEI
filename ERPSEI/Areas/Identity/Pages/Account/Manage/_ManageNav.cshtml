@using Microsoft.AspNetCore.Mvc.Localization
@using ERPSEI.Entities
@inject IViewLocalizer Localizer
@inject SignInManager<AppUser> SignInManager
<ul class="nav nav-pills flex-column mb-5">
    <li class="nav-item"><a class="nav-link @ManageNavPages.IndexNavClass(ViewContext)" id="profile" asp-page="./Index">@Localizer["ProfileNav"]</a></li>
    <li class="nav-item"><a class="nav-link @ManageNavPages.EmailNavClass(ViewContext)" id="email" asp-page="./Email">@Localizer["EmailNav"]</a></li>
    <li class="nav-item"><a class="nav-link @ManageNavPages.ChangePasswordNavClass(ViewContext)" id="change-password" asp-page="./ChangePassword">@Localizer["PasswordNav"]</a></li>
    <li class="nav-item"><a class="nav-link @ManageNavPages.PersonalDataNavClass(ViewContext)" id="personal-data" asp-page="./PersonalData">@Localizer["DataNav"]</a></li>
</ul>

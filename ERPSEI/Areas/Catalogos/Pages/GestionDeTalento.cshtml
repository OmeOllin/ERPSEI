@page
@using Microsoft.AspNetCore.Localization;
@using Microsoft.AspNetCore.Mvc.Localization;
@using ERPSEI.Areas.Pages.Catalogos;
@model GestionDeTalentoModel
@inject IViewLocalizer Localizer;
@{
	ViewData["Title"] = Localizer["Title"];

	// Retrieves the requested culture
	IRequestCultureFeature? rqf = Request.HttpContext.Features.Get<IRequestCultureFeature>();

	// Culture contains the information of the requested culture
	System.Globalization.CultureInfo? culture = rqf != null ? rqf.RequestCulture.Culture : new System.Globalization.CultureInfo("es-MX");

	string cultureName = culture.Name;
}

<h3 class="title mb-3">@ViewData["Title"]</h3>

<!-- --------------------------- -->
<!-- Sección de filtros -------- -->
<form id="filtros" method="post">
	<div class="accordion shadow mb-5" id="accordionFiltros">
		<div class="accordion-item">
			<h2 class="accordion-header" id="headingOne">
				<button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
					<h5>@Localizer["FilterTitle"]</h5>
				</button>
			</h2>
			<div id="collapseOne" class="accordion-collapse collapse show" aria-labelledby="headingOne" data-bs-parent="#accordionFiltros">
				<div class="accordion-body">
					<div class="row">
						<div class="col-sm-6 col-md-6 col-lg-3">
							<div class="form-floating mb-3">
								<input id="inpFiltroFechaIngresoInicio" type="date" asp-for="Input.FechaIngresoInicio" class="form-control" placeholder="@Localizer["FechaIngresoPlaceholder"]" />
								<label asp-for="Input.FechaIngresoInicio" class="form-label"></label>
							</div>
						</div>
						<div class="col-sm-6 col-md-6 col-lg-3">
							<div class="form-floating mb-3">
								<input id="inpFiltroFechaIngresoFin" type="date" asp-for="Input.FechaIngresoFin" class="form-control" placeholder="@Localizer["FechaIngresoPlaceholder"]" />
								<label asp-for="Input.FechaIngresoFin" class="form-label"></label>
							</div>
						</div>
						<div class="col-sm-6 col-md-6 col-lg-3">
							<div class="form-floating mb-3">
								<input type="date" asp-for="Input.FechaNacimientoInicio" class="form-control" placeholder="@Localizer["FechaNacimientoPlaceholder"]" />
								<label asp-for="Input.FechaNacimientoInicio" class="form-label"></label>
							</div>
						</div>
						<div class="col-sm-6 col-md-6 col-lg-3">
							<div class="form-floating mb-3">
								<input type="date" asp-for="Input.FechaNacimientoFin" class="form-control" placeholder="@Localizer["FechaNacimientoPlaceholder"]" />
								<label asp-for="Input.FechaNacimientoFin" class="form-label"></label>
							</div>
						</div>
					</div>
					<div class="row">
						<div class="col-sm-6 col-md-6 col-lg-3">
							<div class="form-floating mb-3">
								<input asp-for="Input.Nombre" class="form-control" placeholder="@Localizer["NombrePlaceholder"]" />
								<label asp-for="Input.Nombre" class="form-label"></label>
							</div>
						</div>
						<div class="col-sm-6 col-md-6 col-lg-3">
							<div class="form-floating mb-3">
								<select asp-for="Input.Puesto" class="form-control" placeholder="@Localizer["PuestoPlaceholder"]">
									<option value="0">Seleccione...</option>
									<option value="1">Puesto 1</option>
									<option value="2">Puesto 2</option>
								</select>
								<label asp-for="Input.Puesto" class="form-label"></label>
							</div>
						</div>
						<div class="col-sm-6 col-md-6 col-lg-3">
							<div class="form-floating mb-3">
								<select asp-for="Input.Area" class="form-control" placeholder="@Localizer["AreaPlaceholder"]">
									<option value="0">Seleccione...</option>
									<option value="1">&Aacute;rea 1</option>
									<option value="2">&Aacute;rea 2</option>
								</select>
								<label asp-for="Input.Area" class="form-label"></label>
							</div>
						</div>
						<div class="col-sm-6 col-md-6 col-lg-3">
							<div class="form-floating mb-3">
								<input asp-for="Input.CURP" class="form-control" placeholder="@Localizer["CURPPlaceholder"]" />
								<label asp-for="Input.CURP" class="form-label"></label>
							</div>
						</div>
					</div>
					<div class="row text-end">
						<div class="col-12">
							<button id="btnBuscar" class="btn btn-primary">
								<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-search" viewBox="0 0 16 16">
									<path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001c.03.04.062.078.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1.007 1.007 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0z" />
								</svg> @Localizer["SearchButton"]
							</button>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</form>

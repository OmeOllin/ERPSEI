@using ERPSEI.Data.Entities
@using Microsoft.AspNetCore.Mvc.Localization
@inject SignInManager<AppUser> SignInManager
@inject AppUserManager UserManager
@inject IViewLocalizer Localizer;

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">
            <i class="bi bi-person-circle"></i> @Localizer["Greeting"] <b>@User.Identity?.Name</b>!
        </a>
    </li>
    <li class="nav-item">
        <form class="form-inline" asp-area="Identity" asp-page="/Account/Login" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="get" >
            <button type="submit" class="nav-link btn btn-link text-dark">
                <i class="bi bi-box-arrow-left"></i> @Localizer["Logout"]
            </button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">
            <i class="bi bi-person-plus-fill"></i> @Localizer["Register"]
        </a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">
            <i class="bi bi-box-arrow-in-right"></i> <b>@Localizer["Login"]</b>
        </a>
    </li>
}
</ul>
